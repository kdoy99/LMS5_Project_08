<Window x:Class="Project08.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project08"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">

    <Grid>
        <ProgressBar x:Name="MemoryBar" HorizontalAlignment="Left" Height="83" Margin="50,230,0,0" VerticalAlignment="Top" Width="286">

        </ProgressBar>
        <TextBox x:Name="MemoryTitle" HorizontalAlignment="Left" Margin="50,200,0,0" TextWrapping="Wrap" Text="총 메모리" VerticalAlignment="Top" Width="286" IsReadOnly="True"/>
        <TextBox x:Name="TotalMemory" HorizontalAlignment="Left" Margin="50,50,0,0" TextWrapping="Wrap" Text="사용 가능한 메모리" VerticalAlignment="Top" Width="286" IsReadOnly="True"/>
        <TextBox x:Name="FreeMemory" HorizontalAlignment="Left" Margin="50,100,0,0" TextWrapping="Wrap" Text="사용 중인 메모리" VerticalAlignment="Top" Width="286" IsReadOnly="True"/>
        <TextBox x:Name="RemainMemory" HorizontalAlignment="Left" Margin="50,150,0,0" TextWrapping="Wrap" Text="메모리 사용량" VerticalAlignment="Top" Width="286" IsReadOnly="True"/>
    </Grid>
</Window>
