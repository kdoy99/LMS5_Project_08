<Window x:Name="ClientWindow" x:Class="Project08.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project08"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900" Loaded="ClientWindow_Loaded">

    <Grid>
        <ProgressBar x:Name="MemoryBar" HorizontalAlignment="Left" Height="83" Margin="50,230,0,0" VerticalAlignment="Top" Width="286">

        </ProgressBar>
        <TextBox x:Name="MemoryTitle" HorizontalAlignment="Left" Margin="50,200,0,0" TextWrapping="Wrap" Text="메모리 사용량 (%) : " VerticalAlignment="Top" Width="286" IsReadOnly="True"/>
        <TextBox x:Name="TotalMemory" HorizontalAlignment="Left" Margin="50,50,0,0" TextWrapping="Wrap" Text="총 메모리 (GB) : " VerticalAlignment="Top" Width="286" IsReadOnly="True"/>
        <TextBox x:Name="FreeMemory" HorizontalAlignment="Left" Margin="50,100,0,0" TextWrapping="Wrap" Text="사용 가능한 메모리 (GB) : " VerticalAlignment="Top" Width="286" IsReadOnly="True"/>
        <TextBox x:Name="RemainMemory" HorizontalAlignment="Left" Margin="50,150,0,0" TextWrapping="Wrap" Text="사용 중인 메모리 (GB) : " VerticalAlignment="Top" Width="286" IsReadOnly="True"/>
        <Button x:Name="ConnectButton" Content="서버 연결" HorizontalAlignment="Left" Margin="720,500,0,0" VerticalAlignment="Top" Height="50" Width="130" Click="ConnectButton_Click"/>
        <TextBox x:Name="IPBox" HorizontalAlignment="Left" Margin="755,435,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="95"/>
        <Label Content="IP" HorizontalAlignment="Left" Margin="724,430,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PortBox" HorizontalAlignment="Left" Margin="755,465,0,0" TextWrapping="Wrap" Text="10004" VerticalAlignment="Top" Width="95"/>
        <Label Content="Port" HorizontalAlignment="Left" Margin="718,460,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
