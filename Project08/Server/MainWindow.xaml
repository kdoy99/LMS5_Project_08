<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <Grid>
        <ListView x:Name="IPList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="50,50,460,270">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="IPHistory" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="460,50,50,270">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ProgressBar x:Name="MemoryBar" HorizontalAlignment="Left" Height="82" Margin="50,460,0,0" VerticalAlignment="Top" Width="286"/>
        <TextBox x:Name="MemoryTitle" HorizontalAlignment="Left" Margin="50,430,0,0" TextWrapping="Wrap" Text="총 메모리" VerticalAlignment="Top" Width="286"/>
        <TextBox x:Name="TotalMemory" HorizontalAlignment="Left" Margin="50,340,0,0" TextWrapping="Wrap" Text="사용 가능한 메모리" VerticalAlignment="Top" Width="286"/>
        <TextBox x:Name="FreeMemory" HorizontalAlignment="Left" Margin="50,370,0,0" TextWrapping="Wrap" Text="사용 중인 메모리" VerticalAlignment="Top" Width="286"/>
        <TextBox x:Name="RemainMemory" HorizontalAlignment="Left" Margin="50,400,0,0" TextWrapping="Wrap" Text="메모리 사용량" VerticalAlignment="Top" Width="286"/>
        <Button Content="서버 구동" HorizontalAlignment="Left" Margin="718,501,0,0" VerticalAlignment="Top" Height="52" Width="132" Click="Button_Click"/>
        <TextBox x:Name="portBox" HorizontalAlignment="Left" Margin="755,469,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="95"/>
        <Label Content="Port" HorizontalAlignment="Left" Margin="718,465,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
